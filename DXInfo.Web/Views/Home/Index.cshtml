        <input id="gparamuserwhid" type="hidden" value="@User.Identity.GetWhId()" />
        <input id="gparamauthtype" type="hidden" value="@User.Identity.GetUser().AuthorityType" />
        @{var userfuncs = User.Identity.GetUserFuncs();}
        @foreach (Func userfunc in userfuncs)
        {
            if (userfunc.Name == "ReportConsItem")
            {
                <div class="col-md-3 col-sm-6 mb-10">
                    <div class="widget widget-stats bg-aqua">
