                    <div class="widget widget-stats bg-black">
                        <div class="stats-icon stats-icon-lg">
                            <i class="fa fa-comments fa-fw"></i>
                        </div>
                        <div class="stats-title">
                            充值(昨日/当月)
                        </div>
                        <div class="stats-number fillfee">
                            --
                        </div>
                        <div class="stats-desc fillpercent">
                            环比上涨(--%)
                        </div>
                    </div>
                </div>
            }
        }
        <div class="col-md-3 col-sm-6 mb-10">
            <a href="/StockMg/Vouch?type=012">
                <div class="widget widget-stats bg-green">
                    <div class="stats-icon stats-icon-lg">
                        <i class="fa fa-globe fa-fw"></i>
                    </div>
                    <div class="stats-title">
                        叫货
                    </div>
                    <div class="stats-number mixmv">
                        -/-
                    </div>
                    <div class="stats-desc">
                        最近一周 (未完结/总叫货)
                    </div>
                </div>
            </a>
        </div>
        <div class="col-md-3 col-sm-6 mb-10">
            <a href="/StockMg/Vouch?type=014">
                <div class="widget widget-stats bg-blue">
                    <div class="stats-icon stats-icon-lg">
                        <i class="fa fa-tags fa-fw"></i>
                    </div>
                    <div class="stats-title">
                        生产
                    </div>
                    <div class="stats-number makeupmv">
                        -/-
                    </div>
                    <div class="stats-desc">
                        最近一周 (未完结/总被叫货)
                    </div>
                </div>
            </a>
        </div>
    </div>
