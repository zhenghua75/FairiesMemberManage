
<div id="page-content">
    <nav class="breadcrumb hidden-xs">
        <i class="iconfont icon-home"></i>
        <a class="maincolor" href="/">主控台</a>
        <span class="c-999">&gt;</span>销售报表
        <span class="c-999">&gt;</span><span class="c-666">@ViewBag.Title</span>
    </nav>
    <div class="row">
        <div class="col-sm-12">
            <div class="panel panel-primary radius" id="reportsalechartpanel">
                <div class="panel-header">
                    <div class="panel-heading-btn ml-10">
                        <a href="javascript:;" class="btn btn-xs iconfont icon-fangda4 btn-default yuanbtn-MINI" data-click="panel-expand"></a>
                        <a href="javascript:;" class="btn btn-xs iconfont icon-jianhao btn-warning yuanbtn-MINI" data-click="panel-collapse"></a>
                        <a href="javascript:;" class="btn btn-xs iconfont icon-close btn-danger yuanbtn-MINI" data-click="panel-remove"></a>
                    </div>
                    <div class="panel-heading-tool">
                        <div class="btn-group dropDown f-r right">
                            <a href="javascript:;" id="searchok" class="btn btn-success dropdown-toggle radius size-S">
                                <i class="iconfont icon-sousuo"></i>
                                <span class="query">查询</span>
                            </a>
                        </div>
                        <div class="btn-group dropDown f-r right">
                            <a href="javascript:;" data-toggle="dropdown" class="btn btn-success dropdown-toggle radius size-S">
                                <i class="iconfont icon-shijian"></i>
                                <span class="monthcurrent">月份：</span>
                                <span class="caret"></span>
                                <input type="hidden" id="curmonth" />
                            </a>
                            <ul class="dropDown-menu menu radius f-12" id="dropdown-month"></ul>
                        </div>
                        <div class="btn-group dropDown f-r right">
                            <a href="javascript:;" data-toggle="dropdown" class="btn btn-success dropdown-toggle radius size-S">
                                <i class="iconfont icon-dianpu"></i>
                                <span class="deptcurrent">门店：</span>
                                <span class="caret"></span>
                                <input type="hidden" id="curdept" />
                            </a>
                            <ul class="dropDown-menu menu radius f-12" id="dropdown-dept"></ul>
                        </div>
                    </div>
                    <h4 class="panel-title">@ViewBag.Title</h4>
                </div>
                <div class="panel-body">
                    <div class="widget-chart with-sidebar bg-black hide" id="sumdeptchart">
                        <div class="widget-chart-content">
                            <h4 class="chart-title"></h4>
                            <div id="sumdept-line-chart" class="morris-inverse" style="height: 260px;">
                            </div>
                        </div>
                        <div class="widget-chart-sidebar bg-black-darker">
                            <div class="chart-number"><span class="deptvalue"></span>/<span class="sumvalue"></span></div>
                            <div id="sumdept-donut-chart" style="height: 230px;">
                            </div>
                        </div>
                    </div>
                    <div class="widget-chart with-sidebar bg-black" id="deptschart">
                        <div class="widget-chart-content">
                            <h4 class="chart-title">
                            </h4>
                            <div id="dept-line-chart" class="morris-inverse">
                            </div>
                        </div>
                        <div class="widget-chart-sidebar bg-black-darker">
                            <div class="chart-number">
                            </div>
                            <ul class="chart-emotikon">
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Css{
    <link href="~/Scripts/vendors/morris/morris.css" rel="stylesheet" />
}
@section scripts{
    <script src="~/Scripts/vendors/morris/raphael.min.js"></script>
    <script src="~/Scripts/vendors/morris/morris.js"></script>
    <script>
        //返回顶部
        var $backToTopEle = $('<a href="javascript:void(0)" class="iconfont icon-top toTop" title="返回顶部" alt="返回顶部" style="display: none"></a>').appendTo($("body")).click(function () {
            $("html, body").animate({ scrollTop: 0 }, 120);
        });
        var $backToTopFun = function () {
            var st = $(document).scrollTop(), winh = $(window).height();
            (st > 0) ? $backToTopEle.show() : $backToTopEle.hide();
            /*IE6下的定位*/
            if (!window.XMLHttpRequest) {
                $backToTopEle.css("top", st + winh - 166);
            }
        };
        $(function () { $(window).on("scroll", $backToTopFun); $backToTopFun(); });
        $(document).ready(function() {
            App.init();
        });
    </script>
    <script src="~/Scripts/reportsalechart.js"></script>
}